{% extends 'base.html.twig' %}

{% block title %}Hello SupportController!{% endblock %}

{% block body %}
<section id="support">
    <div class="container position-relative">
        <div class="row gy-5" data-aos="fade-in">
            <div class="col-lg-12  order-lg-1 d-flex flex-column  caption">
                {% for flash_error in app.flashes('success') %}
                    <div class="alert alert-success" role="alert">{{ flash_error }}</div>
                {% endfor %}


                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">Suject</th>
                        <th scope="col">Date</th>
                        <th scope="col">Status</th>
                        <th scope="col">Voir</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        {% for row in ticket %}
                        <td>{{ row.subject }}</td>
                        <td>{{ row.createdAt|date('d/m/y H:i')}}</td>
                            <td>          {% if row.status == 1 %}
                                    <span class="badge bg-success">{{ row.statusAsString }}</span>
                                {% elseif row.status == 2 %}
                                    <span class="badge bg-primary">{{ row.statusAsString }}</span>
                                {% elseif row.status == 3 %}
                                    <span class="badge bg-danger">{{ row.statusAsString }}</span>
                                {% endif %}</td>
                        <td><a href="{{ path('app_support_ticket', {'id': row.id}) }}">voir</a> </td>

                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('app_support') }}" class="btn btn-success">Cr√©er un nouveau ticket</a>
            </div>
        </div>
    </div>
</section>
{% endblock %}
