{% extends 'baseadmin.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{% if user.roles %}

                        {% for role in user.roles %}

                            {{ role }}
                        {% endfor %}
                    {% endif %}</td>
            </tr>

            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ user.address }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ user.zipcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ user.city }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_profil_index') }}">back to list</a>

    <a href="{{ path('app_profil_edit', {'id': user.id}) }}">edit</a>

    {{ include('admin/profil/_delete_form.html.twig') }}
{% endblock %}
