{{ form_start(form) }}
<div class="mb-3">
    {{ form_label(form.email) }}
    {{ form_widget(form.email) }}
</div>
<div class="mb-3">
    {{ form_label(form.roles) }}
    {{ form_widget(form.roles) }}
</div>
<div class="mb-3">
    {{ form_label(form.password) }}
    {{ form_widget(form.password) }}
</div>
<div class="mb-3">
    {{ form_label(form.isVerified) }}
    {{ form_widget(form.isVerified) }}
</div>
<div class="mb-3">
    {{ form_label(form.name) }}
    {{ form_widget(form.name) }}
</div>
<div class="mb-3">
    {{ form_label(form.lastname) }}
    {{ form_widget(form.lastname) }}
</div>
<div class="mb-3">
    {{ form_label(form.address) }}
    {{ form_widget(form.address) }}
</div>
<div class="mb-3">
    {{ form_label(form.zipcode) }}
    {{ form_widget(form.zipcode) }}
</div>
<div class="mb-3">
    {{ form_label(form.city) }}
    {{ form_widget(form.city) }}
</div>
<div class="mb-3">
    {{ form_label(form.config) }}
    {{ form_widget(form.config) }}
</div>
{% if user.photo %}
    <div class="p-2">
        <img class="img-fluid" src="/assets/file/{{ user.photo }}" width="250" alt="{{ user.photo }}">
    </div>
{% endif %}
<div class="mb-3">
    {{ form_label(form.photo) }}
    {{ form_widget(form.photo) }}
</div>
<button class="btn btn-success">{{ button_label|default('Valider') }}</button>
<a href="{{ path('app_profil_index') }}" class="btn btn-dark">Retour</a>
{{ form_end(form) }}
