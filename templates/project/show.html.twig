{% extends 'baseadmin.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Nom</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description|raw }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ project.startdate ? project.startdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ project.enddate ? project.enddate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Budget</th>
                <td>{{ project.budget }} €</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_project_index') }}" class="btn btn-dark">Retour</a>

    <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-primary">Editer</a>

    {{ include('project/_delete_form.html.twig') }}
{% endblock %}
