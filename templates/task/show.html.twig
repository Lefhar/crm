{% extends 'baseadmin.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ task.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ task.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ task.description|raw }}</td>
        </tr>
        <tr>
            <th>Deadline</th>
            <td>{{ task.deadline ? task.deadline|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Priority</th>
            <td>{{ task.priorityAsString }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ task.statusAsString }}</td>
        </tr>
        <tr>
            <th>Progress</th>
            <td>{{ task.progressAsString }}</td>
        </tr>
        </tbody>
    </table>
    <div class="form-group">
        <a href="{{ path('app_task_index') }}" class="btn btn-dark">Retour</a>

        <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-primary">Editer</a>
    </div>


    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
